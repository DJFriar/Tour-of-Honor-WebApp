<head>
  <%- include('../../partials/head'); %>
</head>

<body>
  <%- include('../../partials/topnav'); %>
  <main>
    <h4>USER MANAGEMENT</h4>
    <div class="uk-container">
      <ul uk-tab>
        <li><a href="#">Users</a></li>
        <li><a href="#">Sponsors</a></li>
      </ul>

      <ul class="uk-switcher uk-margin">
        <!-- Users Tab -->
        <li>
          <h5>USERS</h5>
          <table class="uk-table uk-table-striped uk-table-small" id="usersTable">
            <thead>
              <tr>
                <th>Flag #</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% userData.forEach(function(user) { %>
                <tr>
                  <td>
                    <%= user.FlagNumber %>
                  </td>
                  <td>
                    <%= user.FirstName %>
                  </td>
                  <td>
                    <%= user.LastName %>
                  </td>
                  <td>
                    <%= user.Email %>
                  </td>
                  <td>
                    <%= user.Role %>
                  </td>
                  <td>
                    <span class="deleteBonusButton" data-uid="<%- userData.ID %>"><i class="far fa-trash-alt"></i></span>&nbsp;
                    <span class="editBonusButton" data-uid="<%- userData.ID %>"><i class="fal fa-edit"></i></span>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </li>
        <!-- Sponsor Tab -->
        <li>
          <h5>SPONSORS</h5>
          <table class="uk-table uk-table-striped uk-table-small" id="sponsorsTable">
            <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>States</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% sponsorData.forEach(function(sponsor) { %>
                <tr>
                  <td>
                    <%= sponsor.FirstName %>
                  </td>
                  <td>
                    <%= sponsor.LastName %>
                  </td>
                  <td>
                    <%= sponsor.States %>
                  </td>
                  <td>
                    <span class="deleteBonusButton" data-uid="<%- sponsorData.ID %>"><i class="far fa-trash-alt"></i></span>&nbsp;
                    <span class="editBonusButton" data-uid="<%- sponsorData.ID %>"><i class="fal fa-edit"></i></span>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </li>
      </ul>
    </div>
  </main>
  <footer>
    <%- include('../../partials/footer'); %>
  </footer>

  <script type="text/javascript" src="/js/user-management.js"></script>
</body>