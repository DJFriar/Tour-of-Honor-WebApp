<head>
  <%- include('../../partials/head'); %>
</head>
<body>
  <% if(activeUser) { %>
    <%- include('../../partials/topnavUser'); %>
  <% } else { %>
    <%- include('../../partials/topnav'); %>
  <% } %>
  <main>
    <a href="/admin" class="no-link-underline"><button type="button" class="uk-button uk-button-link backToAdminBtn"><i class="fas fa-arrow-left"></i> Back to Admin Dashboard</button></a>
    <h4>Trophies & Awards</h4>
    <% if(NotificationText) { %>
      <%- include('../../partials/notice'); %>
    <% } %>
    &nbsp;<br/>
    <div class="trophy-container" id='tabs'>
      <ul uk-tab>
        <li><a href="#trophies">Trophies</a></li>
        <!-- <li><a href="#awards">Awards</a></li> -->
      </ul>

      <ul class="uk-switcher uk-margin">
        <!-- Trophies -->
        <li id="trophies">
          <form class="signup uk-grid-small uk-form-stacked" uk-grid>
            <div class="uk-width-1-4@s">
              <label class="uk-form-label" for="TrophyRegion">Trophy Region</label>
              <select required class="uk-select" name="TrophyRegion" id="TrophyRegion">
                <% Regions.forEach(function(region) { %>
                  <option value="<%= region.id %>">
                    <%= region.Region %>
                  </option>
                <% }) %>
              </select>
            </div>
            <div class="uk-width-1-4@s">
              <label class="uk-form-label" for="TrophyPlace">Trophy Place</label>
              <select required class="uk-select" name="TrophyPlace" id="TrophyPlace">
                <option value="1">1st</option>
                <option value="2">2nd</option>
                <option value="3">3rd</option>
              </select>
            </div>
            <div class="uk-width-1-4@s">
              <label class="uk-form-label" for="FlagNum">Flag Number</label>
              <input required class="uk-input" id="FlagNum" type="number" placeholder="###">
            </div>
            <div class="uk-width-1-4@s ">
              <label class="uk-form-label" for="awardTrophy">&nbsp;</label>
              <button type="button" id="awardTrophy" class="uk-button uk-button-primary">Award Trophy</button>
            </div>
          </form>
          <p>DataTable Goes Here</p>
        </li>
        <!-- Awards -->
        <li id="awards">
          <form class="signup uk-grid-small uk-form-stacked" uk-grid>
            <div class="uk-width-1-4@s">
              <label class="uk-form-label" for="AwardName">Award Name</label>
              <select required class="uk-select" name="AwardName" id="AwardName">
                <option value="SS1K">SaddleSore 1000</option>
                <option value="SS1K-Extreme">SaddleSore 1000 Extreme</option>
                <!-- <option value="BB1500">BunBurner 1500</option> -->
              </select>
            </div>
            <!-- <div class="uk-width-1-4@s">
              <label class="uk-form-label" for="TrophyPlace">Trophy Place</label>
              <select required class="uk-select" name="TrophyPlace" id="TrophyPlace">
                <option value="1">1st</option>
                <option value="2">2nd</option>
                <option value="3">3rd</option>
                <option value="0">Revoke</option>
              </select>
            </div> -->
            <div class="uk-width-1-4@s">
              <label class="uk-form-label" for="FlagNum">Flag Number</label>
              <input required class="uk-input" id="FlagNum" type="number" placeholder="###">
            </div>
            <div class="uk-width-1-4@s">
              <label class="uk-form-label" for="Date">Date</label>
              <input required class="uk-input" id="Date" type="date" placeholder="###">
            </div>
            <div class="uk-width-1-4@s ">
              <label class="uk-form-label" for="grantAward">&nbsp;</label>
              <button type="button" id="grantAward" class="uk-button uk-button-primary">Grant Award</button>
            </div>
          </form>
          <p>Awards List Goes Here</p>
        </li>
      </ul>
    </div>
  </main>
  <footer>
    <%- include('../../partials/footer'); %>
  </footer>
  <script type="text/javascript" src="/js/trophy-editor.js"></script>
</body>
