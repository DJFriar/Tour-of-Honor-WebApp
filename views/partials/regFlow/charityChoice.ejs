<div>
  <h2 class="toh-mb-18">Charity Choice</h2>
  <p>Please choose what charity you would like to support from the list below.</p>
  <form class="uk-grid-small uk-form-stacked" uk-grid>
    <div class="uk-width-1-3@s">&nbsp;</div>
    <div class="uk-width-1-3@s">
      <label class="uk-form-label uk-text-left" for="CharityChoice">I'd like to support:</label>
      <select class="uk-select toh-input" required name="CharityChoice" id="CharityChoice">
        <option disabled selected value>
          -- Select a Charity --
        </option>
        <% Charities.forEach(function(charity) { %>
          <option value="<%= charity.id %>">
            <%= charity.Name %>
          </option>
        <% }) %>
      </select>
    </div>
    <div class="uk-width-1-3@s">&nbsp;</div>
    <div class="uk-width-1-1@s">
      <label class="uk-form-label" for="saveCharityChoiceBtn">&nbsp;</label>
      <button disabled class="uk-button uk-button-primary button-rounded toh-ml-8" id="saveCharityChoiceBtn" data-userid="<%= User.id %>">Support This Charity</button>
    </div>
  </form>
</div>