<div class="modal-content">
  <span class="close">&times;</span>
  <h4>Edit Memorial Text for XXXX</h4>
  <form class="uk-grid-small uk-form-stacked" uk-grid>
    <input class="uk-input" id="EditMemorialID" type="hidden" placeholder="">
    <input class="uk-input" id="EditMemorialTextID" type="hidden" placeholder="">
    <div class="uk-width-1-1@s" style="margin: 8px 0;">
      <label class="uk-form-label" for="MemorialTextHeading">Memorial Heading</label>
      <input class="uk-input uk-width-1-1" type="text" name="MemorialTextHeading" id="MemorialTextHeading" placeholder="memorialHeading">
    </div>
    <div class="uk-width-1-1@s">
      <label class="uk-form-label" for="MemorialText">Memorial Text</label>
      <textarea class="uk-textarea" rows="5" name="MemorialText" id="MemorialText" placeholder=""></textarea>
    </div>
    <div>
      <label class="uk-form-label">&nbsp;</label>
      <button class="uk-button uk-button-default uk-button-small" id="cancelButton">Cancel</button>
      <button class="uk-button uk-button-primary uk-button-small" id="saveMemorialTextChangesButton">Save</button>
    </div>
  </form>
</div>